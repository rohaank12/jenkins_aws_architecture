pipeline {
    agent any

    environment {
        # Define your Jenkins home path, typically /var/lib/jenkins
        JENKINS_HOME_PATH = '/var/lib/jenkins'
        # Define the path to your backup script on the agent
        BACKUP_SCRIPT_PATH = './jenkins_backup.sh' // Assuming script is in workspace
    }

    stages {
        stage('Prepare Backup Script') {
            steps {
                script {
                    // This assumes jenkins_backup.sh is part of your SCM checkout
                    // If not, you'd need to copy it to the workspace first,
                    // e.g., using a 'stash' from another job or a 'git' step.

                    sh "chmod +x ${BACKUP_SCRIPT_PATH}"
                }
            }
        }

        stage('Run Jenkins Backup') {
            steps {
                # Use withCredentials to securely pass AWS secrets
                withCredentials([
                    awsAccessKeyId('AWS_ACCESS_KEY_ID'),      // Replace with your Jenkins credential ID for AWS Access Key
                    awsSecretKey('AWS_SECRET_ACCESS_KEY')    // Replace with your Jenkins credential ID for AWS Secret Key
                ]) {
                    sh """
                        sudo ${BACKUP_SCRIPT_PATH} \
                            ${JENKINS_HOME_PATH} \
                            "${AWS_ACCESS_KEY_ID}" \
                            "${AWS_SECRET_ACCESS_KEY}"
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Backup pipeline finished."
        }
    }
}
